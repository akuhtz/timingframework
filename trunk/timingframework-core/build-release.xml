<?xml version="1.0" encoding="UTF-8"?>
<project name="timingframework-core" default="build-release-core" basedir="..">

	<property name="tf-version" value="2.0" />
	<property name="promises-jar" value="promises-3.2.2.jar" />
	<property name="fs" value="${file.separator}" />

	<property name="core" location="${basedir}${fs}timingframework-core" />
	<property name="core-src" location="${core}${fs}src" />
	<property name="core-lib" location="${core}${fs}lib" />
	<property name="core-release" location="${core}${fs}release" />
	<property name="core-release-work" location="${core-release}${fs}timingframework-core-${tf-version}" />
	<property name="core-jar" value="timingframework-core-${tf-version}.jar" />

	<target name="build-release-core">
		<delete dir="${release}" quiet="true" />

		<mkdir dir="${core-release}" />
		<mkdir dir="${core-release-work}" />
		<mkdir dir="${core-release-work}${fs}lib" />

		<copy file="${core-lib}${fs}${promises-jar}" tofile="${core-release-work}${fs}lib${fs}${promises-jar}" />
		<copy todir="${core-release-work}${fs}src">
			<fileset dir="${core-src}" />
		</copy>

		<mkdir dir="${core-release-work}${fs}bin" />
		<javac srcdir="${core-release-work}${fs}src" destdir="${core-release-work}${fs}bin" classpath="${core-release-work}${fs}lib${fs}${promises-jar}" debug="on" source="1.6" target="1.6" />
		<jar destfile="${core-release-work}${fs}lib${fs}${core-jar}">
			<fileset dir="${core-release-work}${fs}bin" />
			<manifest />
		</jar>
		<jar destfile="${core-release-work}${fs}lib${fs}${core-jar}" update="true">
			<fileset dir="${core-release-work}${fs}src" />
			<manifest />
		</jar>
		<delete quiet="true" dir="${core-release-work}${fs}bin" />

		<javadoc access="public" destdir="${core-release-work}${fs}/javadoc" classpath="${core-release-work}${fs}lib${fs}${promises-jar}" source="1.6" sourcepath="${core-release-work}${fs}src" Overview="${core-lib}${fs}javadoc-overview.html" notree="true" nodeprecatedlist="true" />

		<zip destfile="${core-release}${fs}timingframework-core-${tf-version}.zip" basedir="${core-release-work}" />
	</target>
</project>